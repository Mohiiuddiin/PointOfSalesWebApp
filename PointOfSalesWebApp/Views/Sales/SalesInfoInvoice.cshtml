@model PointOfSalesWebApp.ViewModels.SaleInvoiceView

@{
    ViewBag.Title = "SalesInfoInvoice";
}


<div style="margin:10px">
    <div class="col-md-12 row">
        <button type="button" class="btn btn-secondary btn-lg btn-block" style="margin-top: 3%;font-weight:bold;color:azure">Customer Invoice</button>

    </div>

    <div class="row" style="background-color:white;font-weight:bold;padding:10px">
        <br />
        <br />
        <div class="col-md-12 row">
            @*@Html.ActionLink("", "SearchRecieve", "",new { @class = "" })*@
            <div class="col-md-4">
                <a class="btn btn-primary" style="" href="/MRSR/SearchRecieve">Back To List</a>

            </div>
        </div>

        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.Label("Invoice No")

            </div>
            <div class="col-md-4 text-success">
                @Html.DisplayFor(x => x.salesInfoView.SalesInvoiceNo)

            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.Label("Customer Name")
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(x => x.salesInfoView.FirstName) &nbsp;
                @Html.DisplayFor(x => x.salesInfoView.LastName)

            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.Label("Date")

            </div>
            <div class="col-md-4">
                @Html.DisplayFor(x => x.salesInfoView.CreatedAt)

            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.Label("Mobile")

            </div>
            <div class="col-md-4">
                @Html.DisplayFor(x => x.salesInfoView.MobileNumber)

            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.LabelFor(x => x.salesInfoView.Email)

            </div>
            <div class="col-md-4">
                @Html.DisplayFor(x => x.salesInfoView.Email)

            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-md-2">
                @Html.LabelFor(x => x.salesInfoView.OverallDiscount)
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(x => x.salesInfoView.OverallDiscount)
            </div>
        </div>



    </div>


    <div class="row">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Vat</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.salesInfoListView)
                {
                <tr>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.ProductCode
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.SRate
                    </td>
                    <td>
                        @item.LineDiscount
                    </td>
                    <td>
                        @item.Vat
                    </td>
                    
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>