@using ReportViewerForMvc;
@{
    ViewBag.Title = "View Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    iframe {
        width: 100%;
    }
</style>
<div style="margin-top:20px">
    <a class="btn btn-info btn-sm" href="@Url.Action("SalesView","Sales")"><i class="fas fa-angle-left"></i>&nbsp; Back to List</a>
</div>
<div class="container">
    <button type="button" class="btn btn-secondary btn-lg btn-block" style="margin-top: 3%; margin-bottom: 3%;font-weight:bold;color:azure">View Master Report</button>

    <div class="row" style="margin-top:20px">
        @if (ViewBag.ReportViewer != null)
        {
            @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
        }

    </div>
</div>
