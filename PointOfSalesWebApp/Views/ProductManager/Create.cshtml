@model PointOfSalesWebApp.ViewModels.ProductView

@{
    ViewBag.Title = "Create";
}
<style>
    label {
        color: azure;
        font-weight: bold;
    }
</style>


@using (Html.BeginForm("Create", "ProductManager", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div style="background-color:black;padding-left: ; border: 0pt whitesmoke groove; border-radius: 5pt; margin-bottom:3% ;">

        <button type="button" class="btn btn-lg btn-block" style="margin-top: 3%; margin-bottom: 3%;background-color:darkslategrey;color:azure;font-weight:bold">Create New Product</button>

        <div class="col-md-12">
            <h4 class="btn btn-info" style="padding-left:35px;padding-right:35px;font-weight:bolder;font-size:large">Create New Product</h4>

        </div>
        <div class="row" style="">


            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.Name, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.Description, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Product.Description, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Product.Description, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.ProductCode, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Product.ProductCode, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Product.ProductCode, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.Price, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Product.Price, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Product.Price, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.WholeSalePrice, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Product.WholeSalePrice, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.Product.WholeSalePrice, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.ProductCategoryId, htmlAttributes: new { @class = "control-label" })

                    @*@Html.DropDownListFor(model => model.Product.ProductCategoryId, new SelectList(Model.Categories, "Id", "Category"), "--select category--", new { htmlAttributes = new { @class = "form-control col-md-12" }, @style = "font-weight:bold;color:black;background-color: white;" })*@
                    @Html.DropDownListFor(model => model.Product.ProductCategoryId, new SelectList(Model.Categories, "Id", "Category"), "-- Select Category --", new { @style = "font-weight:bold;color:black;background-color: white;", @class = "form-control col-md-12" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.ProductCompanyId, htmlAttributes: new { @class = "control-label" })

                    @*@Html.DropDownListFor(model => model.Product.ProductCompanyId, new SelectList(Model.Companies, "Id", "Company"), "--select company--", new { htmlAttributes = new { @class = "", @style = "font-weight:bold;color:black;background-color: white;" } })*@
                    @Html.DropDownListFor(model=>model.Product.ProductCompanyId, new SelectList(Model.Companies, "Id", "Company"), "-- Select Category --", new { @style = "font-weight:bold;color:black;background-color: white;", @class = "form-control col-md-12" })

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Product.Image, htmlAttributes: new { @class = "control-label" })

                    <input type="file" id="file" name="file" class="form-control col-md-12" />

                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group col-md-4">
                    <input class="btn btn-info col-md-4" type="submit" value="Create" />
                </div>
            </div>
        </div>

    </div>

}

<div style="margin-left:5px">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
</div>


