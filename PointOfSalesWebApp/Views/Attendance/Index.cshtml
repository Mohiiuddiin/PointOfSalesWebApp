@model IEnumerable<PointOfSalesWebApp.Models.Attendance>

@{
    ViewBag.Title = "Index";
}

<button type="button" class="btn btn-success btn-lg btn-block" style="margin-top: 3%; margin-bottom: 3%;">Employee Attendance List</button>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img class="img-thumbnail" style="height:100px;width:100px" src="~/Content/EmployeeImages/@item.ImageUrl" />
                @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
                <br />
                @Html.DisplayFor(modelItem => item.Employee.LastName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CheckTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>*@
        </tr>
        }
    </tbody>

</table>



  
